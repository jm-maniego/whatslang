{
  "manifest_version": 2,
  "name": "WhatsLang",
  "description": "Remove languauge barrier",
  "version": "1.0",

  "background": {
    "scripts": ["lib/jquery.js", "background.js"]
  },

  "content_scripts": [
    {
    "matches": ["<all_urls>"],
    "js": ["lib/jquery.js", "common.js", "content_scripts/main.js"]
    }
  ],
  "permissions": [ "*://translate.google.com/*", "tabs", "tts" ],
  "content_security_policy": "script-src 'self' 'unsafe-eval' https://ssl.google-analytics.com https://translate.google.com; object-src 'self'"

}